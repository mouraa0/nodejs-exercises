extends layouts/main-layout.pug

block styles   
    link(rel="stylesheet", href="add-products.css")

block content
    main
        if prods.length  > 0
            .grid 
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title  #{product.title}
                        div.card__image
                            img(src="https://images.pexels.com/photos/762687/pexels-photo-762687.jpeg?cs=srgb&dl=pexels-jess-bailey-designs-762687.jpg&fm=jpg", alt="#{product.title}")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting #{product.title}
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No Products
                